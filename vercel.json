{
  "regions": ["lhr1"],
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [{ "type": "host", "value": "www.donatheresa.com" }],
      "destination": "https://donatheresa.com/:path",
      "permanent": true
    }
  ],
  "functions": {
    "app/api/**/route.ts": {
      "maxDuration": 60
    },
    "app/**/page.tsx": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/send-reconfirmations",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/process-reconfirmations",
      "schedule": "0 * * * *"
    }
  ],
  "$schema": "https://openapi.vercel.sh/vercel.json"
}